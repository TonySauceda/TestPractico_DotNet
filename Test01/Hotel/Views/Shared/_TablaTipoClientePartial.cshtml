@model List<Hotel.DataAccess.BDModels.TiposCliente>

@{
    Layout = "";
}

<table class="table w-100 table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TipoClienteId)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TipoCliente)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().PorcentajeDescuento)</th>
            @if (User.IsInRole(Hotel.WebApp.Utils.Constantes.Identity.Rol.Administrador))
            {
                <th>Editar</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td class="text-center" colspan="100">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Cargando registros...</span>
                    </div>
                </td>
            </tr>
        }
        else if (Model.Count == 0)
        {
            <tr>
                <td class="text-center" colspan="100">
                    <span>No se encontraron registros</span>
                </td>
            </tr>
        }
        else
        {
            foreach (var tipoCliente in Model)
            {
                <tr>
                    <td>@tipoCliente.TipoClienteId</td>
                    <td>@tipoCliente.TipoCliente</td>
                    <td>@tipoCliente.PorcentajeDescuento</td>
                    @if (User.IsInRole(Hotel.WebApp.Utils.Constantes.Identity.Rol.Administrador))
                    {
                        <td>
                            <a asp-action="Editar" asp-route-id="@tipoCliente.TipoClienteId" class="btn btn-success">Editar</a>
                        </td>
                    }

                </tr>
            }
        }
    </tbody>
</table>