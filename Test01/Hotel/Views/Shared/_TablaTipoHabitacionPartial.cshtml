@model List<Hotel.DataAccess.BDModels.TiposHabitacion>

@{
    Layout = "";
}

<table class="table w-100 table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TipoHabitacionId)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().TipoHabitacion)</th>
            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Precio)</th>
            @if (User.IsInRole(Hotel.WebApp.Utils.Constantes.Identity.Rol.Administrador))
            {
                <th>Editar</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td class="text-center" colspan="100">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Cargando registros...</span>
                    </div>
                </td>
            </tr>
        }
        else if (Model.Count == 0)
        {
            <tr>
                <td class="text-center" colspan="100">
                    <span>No se encontraron registros</span>
                </td>
            </tr>
        }
        else
        {
            foreach (var tipoHabitacion in Model)
            {
                <tr>
                    <td>@tipoHabitacion.TipoHabitacionId</td>
                    <td>@tipoHabitacion.TipoHabitacion</td>
                    <td>@tipoHabitacion.Precio.ToString("C2")</td>
                    @if (User.IsInRole(Hotel.WebApp.Utils.Constantes.Identity.Rol.Administrador))
                    {
                        <td>
                            <a asp-action="Editar" asp-route-id="@tipoHabitacion.TipoHabitacionId" class="btn btn-success">Editar</a>
                        </td>
                    }

                </tr>
            }
        }
    </tbody>
</table>