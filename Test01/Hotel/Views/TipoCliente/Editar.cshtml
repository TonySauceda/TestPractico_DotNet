@using Hotel.DataAccess.BDModels
@model Hotel.WebApp.Models.TipoClienteViewModel

@{
    ViewData["Title"] = "Editar tipo cliente";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-12">
        <span class="text-danger font-weight-bold">@ViewBag.Mensaje</span>
    </div>
    <div class="col-12 col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="TipoClienteId" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="TipoCliente" class="control-label"></label>
                <input asp-for="TipoCliente" class="form-control" />
                <span asp-validation-for="TipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PorcentajeDescuento" class="control-label"></label>
                <input asp-for="PorcentajeDescuento" class="form-control" min="0" max="100" />
                <span asp-validation-for="PorcentajeDescuento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
